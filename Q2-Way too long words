#include <iostream>
#include<string>
using namespace std;
int main() {
    int n; cin>>n;
    while(n--){
        string s; cin>>s;
        if(s.length()>10){
           string s1= s.substr(0,1);
           string s2= s.substr(s.length()-1);
           cout<<s1<<s.length()-2<<s2<<endl;
        }
        else cout<<s<<endl;
    }
}
