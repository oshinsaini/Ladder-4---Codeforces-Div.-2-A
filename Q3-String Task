#include <iostream>
#include<string>
using namespace std;
int main() {
    string s; cin>>s; int size=s.length();
    for(int i=0; i<size; i++){
        if(s[i]!='a'&& s[i]!='e'&& s[i]!='i'&& s[i]!='o' && s[i]!='u' && s[i]!='A' && s[i]!='E' && s[i]!='I' && s[i]!='O' && s[i]!='U' && s[i]!='y' && s[i]!='Y'){
            cout<<".";
            if(s[i]>=65 && s[i]<=90) {s[i]=s[i]+32; cout<<s[i];}
            else cout<<s[i];
            
        }
    }
}
